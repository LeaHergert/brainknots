:root {
  --energizing-violet: #873df5;
  --optimistic-yellow: #fffd8c;
  --soft-grey: #d3cfdb;
  --cozy-green: #036e54;
  --hopeful-sage: #d3ecd8;
  --dark-grey: #191c1f;
  --mouse-grey: #59616a;
  --bright-grey: #efebf6;
}

@font-face {
  font-family: "darumadropone";
  src: url("DarumadropOne-Regular.ttf");
}
@font-face {
  font-family: "quicksand";
  src: url("Quicksand-VariableFont_wght.ttf");
}

html {
  scroll-behavior: smooth;
}

body {
  margin: 0;
  overflow-x: hidden;
  width: 100vw;
}

h1,
h2,
h4 {
  font-family: "darumadropone";
  color: var(--dark-grey);
  margin: 0;
}
h3 {
  font-family: "quicksand";
  color: var(--energizing-violet);
  font-size: 0.75em;
  margin: 0.1em;
}

.logo {
  font-family: "darumadropone";
  color: var(--dark-grey);
  text-transform: uppercase;
  font-weight: bolder;
  font-size: 1.5em;
}

header {
  display: flex;
  justify-content: space-between;
  margin: 0.5em 2.5em;
  max-width: 95vw;
  height: 20vh;
}

nav {
  margin: 2em;
  text-transform: uppercase;
}

nav a {
  font-family: "quicksand";
  color: var(--cozy-green);
  font-weight: bold;
}
a {
  text-decoration: none;
}
.background {
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0) 0%,
    rgba(3, 110, 84, 0) 70%,
    rgba(211, 236, 216, 1) 100%
  );
}

.section {
  position: relative;
  margin: 0 1.5em 0 2.5em;
  height: 80vh;
  min-height: fit-content;
  z-index: 1;
}

.section p {
  font-family: "quicksand";
  margin-bottom: 3em;
  width: 80%;
}
#project {
  margin-top: 20vh;
  scroll-margin-top: 20vh;
}

.text {
  display: flex;
}
.left,
.right {
  width: 50%;
}

.txtright {
  justify-content: end;
}

.imgleft {
  position: absolute;
  bottom: 20%;
  max-height: 70vh;
  width: auto;
  z-index: -1;
  max-width: 48%;
}

.imgright {
  position: absolute;
  right: -1.5vw;
  height: 80vh;
  width: auto;
  /* top: 0vh; */
  z-index: -1;
  /* width: 55vw; */
  bottom: 0;
}

